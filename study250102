echo "file test" > test.txt
//file test 내용이 담긴 test.txt 파일 생성

mkdir [폴더명1] [폴더명2]
//폴더 다량 생성

mkdir -p [상위폴더명]/[하위폴더명]
//상,하위 폴더 생성

rm [파일명]
//특정 파일 삭제

pwd
//현재 디렉터리 확인

ls -l
// 파일 상세 조회

ll
// ls -l의 별칭 => alias ll = 'ls -l'

ls -al
//숨김파일 포함하여 파일 상세 조회
//-a : 숨김파일 포함,   -ㅣ : 상세 정보 확인

ls
//ls : 파일명 조회

ls [파일명]
//특정 파일명 존재 여부 확인
